{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Native Debug",
      // The name self-explains the modus operandi of this configuration.
      // It is used to debug a application using native tools.
      // It can be used for local development.
      // It can be also used when you work with a remote target using code-server.
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build_dir/app",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "preLaunchTask": "make: build", // Ensure this matches your build task name
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "Connect with gdbserver",
      // This configuration is used to debug a remote target using gdbserver.
      // The application must be manually copied on the remote, and then gdbserver on port 2345 must be started.
      // The gdb is running locally on the host machine. It must support the target architecture.
      // The gdb and gdbserver communicate using TCP on the port 2345.
      // The gdbserver is started with the option --once to stop  when the debugging session is finished.
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build_dir/app",
      "miDebuggerServerAddress": "192.168.254.100:2345",
      // th correct binary depends on the distro, in Debian derived distros it is gdb-multiarch, in Arch and derivatives it is gdb
      //   "miDebuggerPath": "/usr/bin/gdb-multiarch",
      "miDebuggerPath": "/usr/bin/gdb",
      "targetArchitecture": "arm64",
      "args": [],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "sets target architecture",
          "text": "-ex 'set architecture aarch64'",
          "ignoreFailures": true
        },
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "Remote Debug via SSH",
      // This configuration is used to debug a remote target using SSH via the pipeTransport.
      // The target's native gdb is running on the target and communicates with the host gdb using the SSH pipe.
      // The experience is the same as you are debugging locally.
      "type": "cppdbg",
      "request": "launch",
      "program": "./app",
      "args": [],
      "stopAtEntry": true,
      "cwd": ".",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Set target architecture",
          "text": "set architecture aarch64",
          "ignoreFailures": true
        },
        {
          "description": "Enable pretty-printing for gdb",
          "text": "enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "pipeTransport": {
        "pipeProgram": "ssh",
        "pipeArgs": ["target"],
        "debuggerPath": "/usr/bin/gdb"
      },
      "sourceFileMap": {
        "/remote/path/to": "${workspaceFolder}"
      },
      "preLaunchTask": "Copy Binary to Remote"
    }
  ],
  "compounds": [
    {
      "name": "Start gdbserver and Debug",
      // This is an automation of "Connect with gdbserver" configuration.
      // The binary is copied to the target using the task "Copy Binary to Remote".
      // The gdbserver is started on the target using the task "Start gdbserver on Remote" to control the binary
      // As the gdb server is specified as the preLaunchTask, the vscode is waiting for it to finnish.
      // Please select "Debug Anyway" when the vscode asks you to start the debugger.
      "configurations": ["Connect with gdbserver"],
      "preLaunchTask": "Start gdbserver on Remote"
    }
  ]
}
